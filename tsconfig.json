{
	"compilerOptions": {
		"target": "es5",
		"noEmit": true
	},
	"filesGlob": [
		"typings/main.d.ts",
		"pg.d.ts",
		"tests/*.ts"
	],
	"files": [
		"typings/main.d.ts",
		"pg.d.ts",
		"tests/client.ts",
		"tests/common.ts",
		"tests/defaults.ts",
		"tests/pool.ts",
		"tests/query.ts"
	],
	"formatCodeOptions": {
		"indentSize": 2,
		"tabSize": 2
	},
	"atom": {
		"rewriteTsconfig": true,
		"formatOnSave": true
	}
}
